<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bgcreatepl1"
    >


    <TextView
        android:layout_marginBottom="10sp"
        android:textAlignment="center"
        android:id="@+id/title"
        android:paddingTop="20sp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create new playlist"
        android:textColor="@color/white"
        android:fontFamily="@font/nsregular"
        android:textSize="18sp"
        android:textFontWeight="300"
        />
    <EditText
        android:paddingTop="30sp"
        android:paddingBottom="30sp"
        android:background="@color/maincolour"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/grey"
        android:fontFamily="@font/nsbold"
        android:textSize="30sp"
        android:textAlignment="center"
        android:id="@+id/inputplaylist"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"/>
    <LinearLayout
        android:paddingTop="30sp"
        android:background="@color/maincolour"
        android:paddingBottom="20sp"
        android:gravity="right"
        android:layout_below="@+id/inputplaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_action"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            style="@style/MyButtonCancle"
            android:textSize="14sp"
            android:textFontWeight="700"
            android:fontFamily="@font/nsregular"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:text="Cancel"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submit"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            style="@style/MyButtonSubmit"
            android:textSize="14sp"
            android:textFontWeight="700"
            android:fontFamily="@font/nsregular"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:text="Save"/>

    </LinearLayout>


</RelativeLayout>