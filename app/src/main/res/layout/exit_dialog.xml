<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingTop="20sp"
        android:paddingBottom="20sp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:background="@drawable/roundedfull"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="20sp"
            android:fontFamily="@font/nsbold"
            android:textFontWeight="700"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="Thankyou"/>

            <TextView
                android:layout_marginLeft="20sp"
                android:layout_marginTop="10sp"
            android:fontFamily="@font/nsregular"
            android:textFontWeight="400"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="Are you sure want to exit ?"/>

    <LinearLayout
        android:layout_marginRight="5sp"
        android:layout_marginTop="30sp"
        android:gravity="right"
        android:layout_below="@+id/inputplaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_action"
            android:layout_marginLeft="10sp"
            android:textAllCaps="false"
            android:textColor="#04132A"
            style="@style/MyButtonCancle"
            android:textSize="14sp"
            android:textFontWeight="700"
            android:fontFamily="@font/nsregular"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:text="Cancel"/>

        <com.google.android.material.button.MaterialButton

            android:id="@+id/submit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            style="@style/MyButtonCancle"
            android:textSize="14sp"
            android:textFontWeight="700"
            android:fontFamily="@font/nsregular"
            android:layout_width="wrap_content"
            android:layout_height="50sp"
            android:text="Ok"/>

    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="27sp"
        android:id="@+id/banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        />
</LinearLayout>
