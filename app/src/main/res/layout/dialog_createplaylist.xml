<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maincolour"
    >


    <TextView

        android:id="@+id/title"
        android:paddingTop="20sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your playlist name"
        android:textColor="@color/white"
        android:fontFamily="@font/nsregular"
        android:textSize="18sp"
        android:textFontWeight="300"
        />
    <EditText
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/grey"
        android:layout_marginBottom="30sp"
        android:layout_marginTop="30sp"
        android:fontFamily="@font/nsbold"
        android:textSize="30sp"
        android:textAlignment="center"
        android:id="@+id/inputplaylist"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"/>
    <LinearLayout
        android:layout_marginBottom="35sp"
        android:gravity="center"
        android:layout_below="@+id/inputplaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_action"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            style="@style/MyButtonCancle"
            android:textSize="14sp"
            android:textFontWeight="700"
            android:fontFamily="@font/nsregular"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:text="Cancel"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/submit"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:textAllCaps="false"
            android:textColor="#04132A"
            style="@style/MyButtonSubmit"
            android:textSize="14sp"
            android:textFontWeight="700"
            android:fontFamily="@font/nsregular"
            android:layout_width="100sp"
            android:layout_height="50sp"
            android:text="Create"/>

    </LinearLayout>


</RelativeLayout>